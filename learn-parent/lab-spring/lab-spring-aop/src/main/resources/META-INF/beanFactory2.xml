<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="helloWorld" factory-method="getHelloWorld"
          class="org.suw.learn.spring.beanfactory.HelloWorld">
        <property name="helloStr" ref="fileHello"/>
    </bean>

    <bean name="fileHello" class="org.suw.learn.spring.beanfactory.FileHelloStrImpl">
        <constructor-arg>
            <value>helloworld.properties</value>
        </constructor-arg>
    </bean>

</beans>